{
  "compilerOptions": {
    "target": "es2018", 
    "module": "commonjs", 
    "lib": ["es2018"], 
    "esModuleInterop": true, 
    "strict": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "typeRoots": ["./node_modules/@types", "./src/types"], 
    "moduleResolution": "node",
    "baseUrl": "./", 
    "paths": {
      "*": ["node_modules/*", "src/types/*"] 
    }
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"] 
}
